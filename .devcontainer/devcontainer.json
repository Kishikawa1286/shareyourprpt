// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "GitHub.vscode-pull-request-github",
        "richie5um2.vscode-sort-json",
        "bungcip.better-toml",
        "astro-build.astro-vscode",
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "unional.vscode-sort-package-json",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        // Deprecated, but latest config does not work correctly somehow.
        "terminal.integrated.shell.linux": "/bin/zsh"
      }
    },
    "zsh": {
      "enabled": true
    }
  },
  "features": {
    "ghcr.io/devcontainers-contrib/features/typescript:2": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    // Did not work when using Docker in Docker (gotrue became unhealthy)
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  "name": "supaFresh",
  "postCreateCommand": "chmod +x ./.devcontainer/postCreateCommand.sh && ./.devcontainer/postCreateCommand.sh",
  "runArgs": ["--network=host", "--cpus=8", "--memory=56g"]
}
